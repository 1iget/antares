menu "AVR Target Configuration"
  choice
  prompt "Select MCU variant"
  default MCU_M640

    config MCU_M8
    bool "AtMega 8"

    config MCU_M16
    bool "AtMega 16"

    config MCU_M640
    bool "AtMega 640"

    config MCU_M1280
    bool "AtMega 640"

    config MCU_M2560
    bool "AtMega 640"

endchoice

  config F_CPU
  int "CPU frequency in Hz"
  default 8000000
  
  comment "Be careful with these values"
  comment "They can screw things up"
  comment "Use make fuses to flash 'em"

  config FUSE_LOW
  hex "lfuse value"
  default 0x00

  config FUSE_HIGH
  hex "hfuse value"
  default 0x00

source "arch/avr/m640/kcnf"

endmenu
