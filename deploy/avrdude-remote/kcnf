menuconfig DEPLOY_AVRDUDE_REMOTE
bool "avrdude over ssh"
depends on ARCH_AVR

  if DEPLOY_AVRDUDE_REMOTE
  
  config DEPLOY_AVRDUDE_SSH_HOST
  string "hostname or IP of the remote host"
  default "192.168.0.100"

  config DEPLOY_AVRDUDE_SSH_PORT
  string "Remote ssh port (just in case)"
  default "22"
  
  config DEPLOY_AVRDUDE_BIN
  string "avrdude binary name"
  default "arm-linux-avrdude"

  config DEPLOY_AVRDUDE_COMMANDLINE
  string "avrdude commandline (read help)"
  default "-c arduino -P /dev/ttyUSB0"
  help
    MCU and filename will be auto-appended 
    Anything not related to filename and MCU should go in here
    TODO: Moar friendly menu

  config DEPLOY_AVRDUDE_FILEPATH
  string "Path on the remote system to store the firmware"
  default "/tmp"

endif
