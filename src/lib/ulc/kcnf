choice
    prompt "Mode of operation"
    help
        Select scheduler mode of operation;
        for further information see doc/en/tmgr.txt

    config LIB_TMGR_UPTIME
    bool "Uptime"

    config LIB_TMGR_COUNTDOWN
    bool "Countdown"

endchoice

choice
    prompt "Time variable size"
    help
        Size of tmgr_time_t type (signed integer)

    config LIB_TMGR_TIME_16
    bool "16 bit"

    config LIB_TMGR_TIME_32
    bool "32 bit"

    config LIB_TMGR_TIME_64
    bool "64 bit"

endchoice
