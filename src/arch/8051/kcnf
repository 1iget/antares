if ARCH_8051

choice
prompt "Pick an MCU family"

config ARCH_8051_STC
bool "STC 8051 family"

config ARCH_8051_AT89
bool "Atmel AT89 family"

endchoice

config F_CPU
int "CPU Frequency in Hz"
help
	Affects some libraries, like soft-delays, iap, etc...

choice 
prompt "Memory model"

config MODEL_SMALL
bool "Small"

config MODEL_MEDIUM
bool "Medium"

config MODEL_LARGE
bool "Large"

config MODEL_HUGE
bool "Huge"

endchoice 

config XRAM_SIZE
int "XRAM size (bytes)"
default 128


config IRAM_SIZE
int "IRAM size (bytes)"
default 128	

config FLASH_SIZE
int "FLASH size (bytes)"
default 4096	


menu "Platform-specific libraries"

if ARCH_8051_STC
source "antares/src/arch/8051/stc/kcnf"
endif

endmenu

endif
