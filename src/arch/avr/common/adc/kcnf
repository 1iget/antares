config AVR_ADC
bool "ADC support"
  
choice 
prompt "ADC driver selection"
  
config AVR_ADC_RR
bool "Round-Robin ISR ADC driver"
  
config AVR_ADC_DUMB
bool "Dumb ADC driver"

endchoice
  
menu "Round Robin ADC Driver Options"
depends on AVR_ADC_RR

config AVR_ADC_HANDLERS
bool "Enable Per Channel Handlers API"

comment "Select channels to sample"
source "src/arch/avr/common/adc/chanlist.kcnf"
endmenu

menu "ADC Channel Tags"

source "src/arch/avr/common/adc/chantags.kcnf"

endmenu
